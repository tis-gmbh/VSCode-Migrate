// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
     "version": "2.0.0",
     "tasks": [
          {
               "type": "npm",
               "script": "watch",
               "problemMatcher": [
                    "$ts-webpack-watch",
                    "$tslint-webpack-watch"
               ],
               "isBackground": true,
               "presentation": {
                    "reveal": "never",
                    "group": "watchers"
               },
               "group": {
                    "kind": "build",
                    "isDefault": true
               }
          },
          {
               "type": "npm",
               "script": "watch-tests",
               "problemMatcher": "$tsc-watch",
               "isBackground": true,
               "presentation": {
                    "reveal": "never",
                    "group": "watchers"
               },
               "group": "build"
          },
          {
               "label": "tasks: watch-tests",
               "dependsOn": [
                    "tasks: create-test-workspace",
                    "npm: watch",
                    "npm: watch-tests"
               ],
               "problemMatcher": []
          },
          {
               "label": "tasks: create-test-workspace",
               "type": "shell",
               "linux": {
                    "command": "mkdir -p src/test/fixtures/_testWorkspace"
               },
               "osx": {
                    "command": "mkdir -p src/test/fixtures/_testWorkspace"
               },
               "windows": {
                    "command": "mkdir -f src/test/fixtures/_testWorkspace"
               },
               "presentation": {
                    "echo": true,
                    "reveal": "never",
                    "focus": false,
                    "panel": "shared",
                    "showReuseMessage": false,
                    "clear": true
               }
          }
     ]
}
